<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">
    <Button
        android:text="Policja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:id="@+id/policeButton"
        android:drawableTop="@drawable/phoneblue"
        android:background="@android:color/white"/>
    <Button
        android:text="Straż"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:id="@+id/fireButton"
        android:drawableTop="@drawable/phonered"
        android:background="@android:color/white"
        android:layout_toRightOf="@id/policeButton"/>
    <Button
        android:text="Pogotowie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:id="@+id/ambulanceButton"
        android:drawableTop="@drawable/phonegreen"
        android:background="@android:color/white"
        android:layout_toRightOf="@id/fireButton"/>
    <Button
        android:text="Alarmowy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarmButton"
        android:textSize="12dp"
        android:drawableTop="@drawable/phoneblack"
        android:background="@android:color/white"
        android:layout_toRightOf="@id/ambulanceButton"/>
    <DigitalClock
        android:id="@+id/digitalClock"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_below="@id/ambulanceButton"
        android:textSize="40dp"
        android:textColor="@color/material_grey_850"
        android:textColorHighlight="@android:color/holo_blue_light"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        android:layout_below="@id/digitalClock">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/linearLayout"
            android:layout_below="@id/digitalClock"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_gravity="center">

            <Button
                android:text="Plan Budynku"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:id="@+id/planButton"
                android:drawableTop="@drawable/buildingPlan"
                android:background="@android:color/white"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:gravity="center"
        />
            <Button
                android:text="Historia zagrożeń"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:id="@+id/threatsButton"
                android:drawableTop="@drawable/history"
                android:background="@android:color/white"
                android:gravity="center"/>
        </LinearLayout>
    <Button
        android:id="@+id/reportButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#ff7f0000"
        android:textSize="20dp"
        android:text="Zgłoś zagrożenie"
        android:drawableLeft="@drawable/triangle"
        android:background="@android:color/white"
        android:paddingTop="20dp"/>

    </LinearLayout>
</RelativeLayout>